<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/clist_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <Button
        android:id="@+id/clist_btn_modify"
        android:layout_width="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:background="#147b47"
        android:textColor="#ffffff"
        android:layout_gravity="center_vertical"
        android:text="수정" />

    <Button
        android:id="@+id/clist_btn_up"
        android:layout_width="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:background="#7BBDFC"
        android:text="▲" />

    <Button
        android:id="@+id/clist_btn_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:textSize="25sp"
        android:background="#7BBDFC"
        android:text="▼" />

    <ImageView
        android:id="@+id/clist_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ico_eatout" />

    <TextView
        android:id="@+id/clist_lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="(카테고리명)"
        android:textColor="#000000"
        android:textSize="20sp" />
</LinearLayout>