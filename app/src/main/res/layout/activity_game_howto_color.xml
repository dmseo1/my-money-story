<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game_howto_colo_back"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_back_black"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="6dp"
        android:text="How to - 색깔 말하기"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="68dp" />

    <Button
        android:id="@+id/game_howto_colo_btn_start"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="#000000"
        android:text="게임시작"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="171dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="주어진 문자의 색 이름을 말하는 게임입니다. \n문자를 그대로 읽으면 안 됩니다.\n게임에 등장하는 색 종류 및 이름은 아래와 같습니다."
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/game_howto_colo_lbl_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="■\n빨강"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/game_howto_colo_lbl_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="■\n검정"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/game_howto_colo_lbl_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="■\n파랑"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:textSize="30sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/game_howto_colo_lbl_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="■\n노랑"
            android:textAlignment="center"
            android:textColor="#ffff00"
            android:textSize="30sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/game_howto_colo_lbl_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="■\n초록"
            android:textAlignment="center"
            android:textColor="#00ff00"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/game_howto_colo_img_speaksperson"
        android:layout_width="82dp"
        android:layout_height="73dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="252dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_speaksperson"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/game_howto_colo_img_speechbubble"
        android:layout_width="141dp"
        android:layout_height="98dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="207dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_speechbubble"
        android:layout_marginStart="68dp" />

    <TextView
        android:id="@+id/game_howto_colo_lbl_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="240dp"
        android:text="(답)"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="122dp" />

    <TextView
        android:id="@+id/game_howto_colo_lbl_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="112dp"
        android:text="(문제)"
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/game_howto_colo_img_ox"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="75dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_o" />

</android.support.constraint.ConstraintLayout>