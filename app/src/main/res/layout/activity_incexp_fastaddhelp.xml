<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#1e90ff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1e90ff"
        android:text="빠른 등록 도움말"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:background="#1e90ff" />

    <TextView
        android:id="@+id/popup_currentsite_lbl_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="금액 입력만으로 수입/지출 내역을 등록할 수 있으며, 메모에는 해당 내용을 기록했던 장소가 기록됩니다. 기록된 장소를 바탕으로 추후 수정을 편리하게 할 수 있습니다. \n\n빠른 등록 이용시 카테고리 및 지출수단은 모두 '(분류없음)'으로 기록됩니다."
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popup_fastaddhelp_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#1e90ff"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>