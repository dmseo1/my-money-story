<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_password"
    android:layout_width="300sp"
    android:layout_height="330sp"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#1E90FF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:text="비밀번호 변경 및 제거"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:background="#1E90FF" />

    <LinearLayout
        android:id="@+id/popup_mfpassword_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popup_mfpassword_lbl_current"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/popup_mfpassword_txt_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_mfpassword_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popup_mfpassword_lbl_one"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="새 비밀번호:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/popup_mfpassword_txt_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_mfpassword_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popup_mfpassword_lbl_two"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/popup_mfpassword_txt_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_mfpassword_btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popup_mfpassword_btn_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:text="비밀번호 변경"
            android:background="#1E90FF"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/popup_mfpassword_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="취소"
            android:background="#1E90FF"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popup_mfpassword_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1E90FF"
            android:textColor="#ffffff"
            android:text="비밀번호 제거"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>