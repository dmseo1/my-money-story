<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#1E90FF" />

        <TextView
            android:id="@+id/expenditure_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E90FF"
            android:text="지출 등록"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:background="#1E90FF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/expenditure_ymd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expenditure_ymd_lbl_ymd"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="일자"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/expenditure_y_md"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/expenditure_spin_y"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/expenditure_ymd_lbl_y"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="년"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.95"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/expenditure_spin_m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/expenditure_ymd_lbl_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/expenditure_spin_d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/expenditure_ymd_lbl_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/expenditure_way"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expentiture_lbl_way"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="지출수단"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/expenditure_spin_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/expenditure_btn_way_setting"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="#1e90ff"
                        android:text="설정"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/expenditure_where"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expenditure_lbl_where"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="카테고리"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/expenditure_spin_where"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/expenditure_btn_category_setting"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="#1e90ff"
                        android:text="설정"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/expenditure_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expenditure_lbl_amount"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="금액"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/expenditure_txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="지출에 대한 만족도"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/expenditure_emotion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/expenditure_5p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="" />

                        <ImageButton
                            android:id="@+id/expenditure_imgbtn_5p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_emotion_5" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/expenditure_4p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <ImageButton
                            android:id="@+id/expenditure_imgbtn_4p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_emotion_4" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/expenditure_3p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="" />

                        <ImageButton
                            android:id="@+id/expenditure_imgbtn_3p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_emotion_3" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/expenditure_2p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="" />

                        <ImageButton
                            android:id="@+id/expenditure_imgbtn_2p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_emotion_2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/expenditure_1p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <ImageButton
                            android:id="@+id/expenditure_imgbtn_1p"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_emotion_1" />
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:text="통계에 포함"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RadioButton
                            android:id="@+id/expenditure_rd_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예"
                            android:textSize="18sp"
                            android:textColor="#000000"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            />

                        <RadioButton
                            android:id="@+id/expenditure_rd_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아니오"
                            android:textSize="18sp"
                            android:textColor="#000000"/>


                    </RadioGroup>

                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/expenditure_memo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expenditure_lbl_memo"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="메모"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/expenditure_txt_memo"
                        android:layout_width="match_parent"
                        android:layout_height="119dp"
                        android:layout_marginRight="8dp"
                        android:ems="10"
                        android:gravity="top"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expenditure_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/expenditure_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:background="#1E90FF"
                        android:text="등록"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/expenditure_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:background="#1E90FF"
                        android:text="취소"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <ImageButton
        android:id="@+id/expenditure_img_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#1E90FF"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_back" />
</android.support.constraint.ConstraintLayout>